@model TestSystem.Models.TestModel
@{
    ViewBag.Title = "Test";
}
<form role="form" method="post">
    <div class="row">
        <div class="col-md-12">
            <h2>@Model.Title</h2>
            <input type="hidden" name="testId" value="@Model.ID" />
        </div>
    </div>
    
    @for (int i = 0; i < Model.Questions.Count(); ++i)
    {
        <input type="hidden" name="Question.@i" value="@Model.Questions[i].ID" />
        <div class="well well-sm">
            <div class="row">
                <div class="col-md-4">
                    <strong>@Model.Questions[i].Text:</strong>
                </div>
            </div>
            @Html.EditorFor(m => m.Questions[i])
        </div>
    }    
    <button type="submit" class="btn btn-default">Ответить</button>
</form>


