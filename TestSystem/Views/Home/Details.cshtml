@model TestSystem.Models.Test
@{
    ViewBag.Title = "Test";
}
<form role="form" method="post">
    <div class="row">
        <div class="col-md-12">
            <h2>@Html.DisplayFor(m => m.Title)</h2>
            @Html.HiddenFor(m=>m.ID)
        </div>
    </div>
    
    @for (int i = 0; i < Model.Questions.Count; ++i)
    {
        <input type="hidden" name="Questions[@i]" value="Questions[@i].Options" />
        <div class="well well-sm">
            <div class="row">
                <div class="col-md-4">
                    <strong>@Model.Questions[i].Text:</strong>
                </div>
            </div>

            @Html.EditorFor(m => m.Questions[i], new { QuestionID = i })
        </div>
    }    
    <button type="submit" class="btn btn-default">Ответить</button>
</form>


