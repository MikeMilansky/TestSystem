@model TestSystem.Models.TestShortModel
@using TestSystem.Tools
@{
    var state = @CommonTools.TestState[Model.State];
}
<div class="row test">
    <div class="col-md-6 title">@Model.Title</div>
    <div class="col-md-1 col-md-offset-1 state">
        <span class="label @state">@state</span>
    </div>
    <div class="col-md-1 col-md-offset-3">
        @if (Model.State == (int)CommonTools.States.Actual)
        {
            <div class="btn btn-primary">Пройти</div>
        }
        else
        {
            <div class="btn btn-danger">Удалить</div>
        }
    </div>
</div>